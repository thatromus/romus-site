---
import type { HTMLAttributes } from "astro/types";
import Link from "@components/Link.astro";

/**
 * ArtStationLogo ->
 * Component for:
 *
 * ArtStation Logo absorber
 */

type Props = HTMLAttributes<"svg"> & {
  href: string;
};

const { class: className, href, ...props } = Astro.props;
---

<Link
  href={href}
  class="p-2 transition-transform duration-400 ease-in-out hover:scale-135 lg:p-4"
>
  <svg
    viewBox="0 0 64 65"
    class:list={[{ className }, "text-accent size-4"]}
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    {...props}
  >
    <path
      d="M0 47.7919L5.40342 57.1576C5.94082 58.228 6.76469 59.1276 7.78299 59.756C8.80129 60.3844 9.97392 60.7167 11.1699 60.716H47.0636L39.6211 47.7919H0Z"
      fill="currentColor"></path>
    <path
      d="M62.9713 44.3487L41.9446 7.72835C41.3942 6.689 40.5717 5.81938 39.5654 5.21279C38.5591 4.6062 37.407 4.28552 36.2326 4.28516H25.1171L57.5982 60.6614L62.7172 51.7806C63.7277 50.0772 64 49.3559 64 47.8586C64.0027 46.6136 63.6455 45.3945 62.9713 44.3487Z"
      fill="currentColor"></path>
    <path
      d="M19.8105 13.4205L5.29451 38.608H34.3265L19.8105 13.4205Z"
      fill="currentColor"></path>
  </svg>
</Link>
